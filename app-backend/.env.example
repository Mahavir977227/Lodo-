# -------------------------------------
# Application Environment Variables
# -------------------------------------
# Note: Copy this file to .env and fill in the actual values.
# Do NOT commit the .env file to version control.

# -- Server Configuration --
# The port the application will run on. Defaults to 3000 if not specified.
PORT=3000

# -- Database Configuration --
# The full connection URL for your PostgreSQL database.
# Format: postgresql://[user]:[password]@[hostname]:[port]/[database]
DATABASE_URL="postgresql://user:password@localhost:5432/national_safety_app"

# -- Security / JWT --
# A secret key for signing JSON Web Tokens.
# Use a long, random, and complex string for production.
JWT_SECRET="your-super-secret-and-long-jwt-key"